set $mod Mod4

focus_follows_mouse no
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# DPMS monitor setting (standby -> suspend -> off) (seconds)
exec --no-startup-id xset dpms 900 1800 2700 &
# Set custom wallpaper
exec --no-startup-id feh --bg-fill ~/.i3/archlinux_motive.png

# Custom hotkeys for software #Balint
# Thunar
bindsym Ctrl+Mod1+iacute exec thunar
bindsym Ctrl+Mod1+backslash exec thunar
# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.i3/i3helper.sh volume up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.i3/i3helper.sh volume down
bindsym XF86AudioMute exec --no-startup-id ~/.i3/i3helper.sh volume mute
# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.i3/i3helper.sh brightness up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.i3/i3helper.sh brightness down
# Keyboard brightness on/off
bindsym Shift+Mod1+k exec --no-startup-id ~/.i3/i3helper.sh keyboard_backlight toggle
# DPMS on/off
bindsym Shift+Mod1+d exec --no-startup-id ~/.i3/i3helper.sh dpms toggle
# MPD pause/play toggle
bindsym XF86HomePage exec --no-startup-id ~/.i3/i3helper.sh mpc toggle

# Window - workspace assignment
assign [class="Clementine"] 3: audio
assign [class="Firefox"] 1: www
assign [class="Opera"] 1: www
assign [class="Thunar"] 4: work
assign [class="^URxvt$" instance="^mutt$"] 2: mail
assign [class="^URxvt$" instance="^ncmpcpp$"] 3: audio
assign [class="^VLC"] 6: video
assign [class="^URxvt$" instance="^offlineimap$"] 9: util
for_window [class="^URxvt$" instance="^scratchpad$"] move scratchpad
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec urxvt
#bindsym $mod+Return exec terminator

# lock the screen with i3lock #Balint
bindsym Ctrl+Mod1+l exec /bin/i3lock -i ~/.i3/archlinux_motive.png
#bindsym Ctrl+Mod1+u exec /bin/i3lock -i ~/.i3/newarchback.png && sudo pm-suspend
bindsym Ctrl+Mod1+u exec /bin/i3lock -i ~/.i3/archlinux_motive.png && sudo systemctl suspend
#Change keyboard layout
bindsym Shift+Mod1+g exec --no-startup-id setxkbmap gb && xmodmap -e 'keycode 52=Y' && xmodmap -e 'keycode 29=Z' && notify-send "Keyboard layout" Gb
bindsym Shift+Mod1+h exec --no-startup-id setxkbmap hu && notify-send "Keyboard layout" Hu

# Auto start applications #Balint
# Mail
exec --no-startup-id urxvt -name mutt -e "mutt"
# Music
exec --no-startup-id mpd
